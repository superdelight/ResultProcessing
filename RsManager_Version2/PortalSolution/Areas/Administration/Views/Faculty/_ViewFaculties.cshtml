@using DAL;
@model PortalSolution.Areas.Administration.Models.FacultyMDV

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>#</th>
        <th>Acronyms</th>
        <th>Description</th>
        <th></th>
    </tr>
     @{int count = 0; }
@foreach (Faculty item in Model.Faculties) {
    <tr>
        @count++;
        <td>@count</td>
        <td>@item.FacAcronyms</td>
        <td>@item.FacName</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new {id=item.Id})
        </td>
    </tr>
}

</table>
