@model PortalSolution.Areas.Administration.Models.DepartmentMDV

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
   
<div class="control-label">Select Faculty</div>
            @using (Html.BeginForm("CreateNewDepartment", "Department", FormMethod.Post))
            {
                
         
                   @Html.DropDownList("FacId", Model.Faculties, "Filter By Faculty",new { id = "FacId",  onchange = "this.form.submit();" })
                       
                 
         



            }

@if (Model != null)
{
    int count = 0;
<table class="table">
    <tr>
        <th>S/N</th>
        <th>Code</th>
        <th>Description</th>
        <th></th>
    </tr>
   

@foreach (var item in Model.Departments)
{
    count++;
    <tr>
        <td>@count</td>
        <td>@item.DeptCode</td>
        <td>@item.DeptFullName</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id})
        </td>
    </tr>
}
</table>
}
</div>
</div>
</div>