</p>
@if (Model != null)
{
    int count = 0;
<table class="table">
    <tr>
        <th>S/N</th>
        <th>Code</th>
        <th>Description</th>
        <th></th>
    </tr>
   

@foreach (var item in Model.Faculties)
{
    count++;
